.itemcontainer{

	height: 62%;
	background-color: #ffffff;
	margin-left: 2%;
	margin-right: 2%;
	width: 96%;
	border-radius: 30rpx;
	height: 60%;
	/* padding: 10rpx 0 10rpx 10rpx; */
	box-shadow: 5px 5px 5px #e0e0e0;

}


.chart_container {
	height: 27%;
	margin-bottom: 3%;
	display: flex;
	box-shadow: 5px 5px 5px #e0e0e0;
	flex-direction: row;
	box-sizing: border-box;
	-webkit-text-size-adjust: none;
	-webkit-user-select: none;
	font-size: 35rpx;
	color: #333;
	background-color: #ffffff;
	font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;

  width: 97%; 
	margin-left: 2%;
	margin-right: 2%;
	border-radius: 30rpx;
}
.ringchartCanvas{
	box-sizing: border-box;
	margin-top: -10px;
	/* width: 100%;
	height: 100%; */
}

.log_start {
	color: #c4c4c4;
	margin: 10px 2px;
  font-size: 12px;
 
}
.log_action {
	color: #999;
	margin: 15px 0px;
  font-size: 15px;
}
.log_name_work {
	color: #3596f1;
	margin: 15px 10px;
  font-size: 15px;
}
.log_name_rest {
	color: #0fc975;
	margin: 15px 10px;
  font-size: 15px;
}
.log_sum {
	color: #0e6497;
	margin: 15px 10px;
	font-size: 15px;
	text-align: center;
}


.log_item{
	padding: 30rpx 0 0 40rpx;
}
.log_item text {
	padding-right: 5px;
}
.clear{
	position: absolute;
	bottom: 0px;
	width: 100%;
	height: 8%;
	text-align: center;
	background-color: #ededed;

}
.clear .clear_btn {
	margin-top: 2%;
	font-size: 13px;
	font-weight: bolder;
	height: 60rpx;
	line-height: 60rpx;
	color: #f95151;
	background-color: #ffffff;
	border-radius: 15rpx;
	width: 20%;
}
.deletelog {
  text-align: center;
  color: #c4c4c4;
  font-size: 32rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
	margin-right: 20rpx;
	margin-top: 25rpx;
  width: 90rpx;
  height: 50rpx;
}
.clear .clear_btn::after {
  border-radius: 98rpx;
  border: 0; 
}
